.container{
  display: flex;
  flex-direction: column;
}


.head-image{
  width: 100%;
  height: 460rpx;
}

.author-data{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}