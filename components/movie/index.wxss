.container{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  background-color: #fff;
}

.poster{
  width: 100%;
  height: 270rpx;
  margin-bottom: 22rpx;

}

.title{
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;

}

.rate-container{
  margin-top: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.score{
  margin-left: 20rpx;
  font-size: 24rpx;
}